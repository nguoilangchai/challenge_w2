<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".OnBoarding">

    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="295dp"
        android:layout_height="159dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:text="Go To The Moon"
        android:textColor="?android:attr/windowBackground"
        android:textColorHint="@color/teal_700"
        android:textSize="60sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="375dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/teal_700"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="212dp"
        android:layout_height="28dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="350dp"
        android:gravity="center"
        android:text="It's easier to sign up now"
        android:textColor="@color/teal_200"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:layout_marginBottom="265dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:drawableLeft="@drawable/fb2"
        android:gravity="center"
        android:text="Continue with Facebook"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:layout_marginBottom="196dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:gravity="center"
        android:text="Create an account"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="85dp"
        android:contentDescription="@string/app_name"
        android:drawableBottom="@drawable/tw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        android:contentDescription="@string/app_name"
        android:drawableBottom="@drawable/google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="79dp"
        android:layout_height="52dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="85dp"
        android:contentDescription="@string/app_name"
        android:drawableBottom="@drawable/ins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="173dp"
        android:layout_height="27dp"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="23dp"
        android:text=" Already have account?"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="78dp"
        android:layout_height="48dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="15dp"
        android:text="Login"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>